<!--
  Get related posts based on tags
  https://themes.ghost.org/docs/recent-featured-sidebar#extra-special-sauce-related-posts
 -->

{{#get 'posts' limit='3' include='authors,tags' filter='tags:[{{post.tags}}]+id:-{{post.id}}' as |related-posts|}}
  {{#if related-posts}}
    <hr>
    <div class='c-related'>
      <div class='o-grid'>
        <div class='o-grid__col o-grid__col--full'>
          <div class='c-title-bar'>
            <h3 class='c-title-bar__title u-font-size-small'>{{t 'You Might Be Interested In' }}</h3>
          </div>
        </div>
        {{> loop }}
      </div>
    </div>
  {{/if}}
{{/get}}