<div class='o-grid'>
  <div class='o-grid__col o-grid__col--full'>
    <div class='c-title-bar c-title-bar--with-icon'>
      <h3 class='c-title-bar__title'>
        <a href='/authors' class='c-title-bar__link u-font-size-small'>Authors<span data-icon="ei-chevron-right" data-size="s"></span></a>
      </h3>
    </div>
  </div>
</div>

<div class='o-grid'>
  {{#get 'authors' limit='3' include='count.posts' order='count.posts desc'}}
    {{#foreach authors}}
      {{> card-author }}
    {{/foreach}}
  {{/get}}
</div>